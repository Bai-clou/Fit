
.countdown-container {
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  background-color: #7e6af8;
  color: white;
}
.countdown {
  font-size: 10em;
}
@-webkit-keyframes countdown-animation {
0% {
    -webkit-transform: scale(3);
            transform: scale(3);
    opacity: 0;
}
33% {
    -webkit-transform: scale(2.5);
            transform: scale(2.5);
    opacity: 1;
}
66% {
    -webkit-transform: scale(2);
            transform: scale(2);
}
100% {
    -webkit-transform: scale(1.5);
            transform: scale(1.5);
}
}
@keyframes countdown-animation {
0% {
    -webkit-transform: scale(3);
            transform: scale(3);
    opacity: 0;
}
33% {
    -webkit-transform: scale(2.5);
            transform: scale(2.5);
    opacity: 1;
}
66% {
    -webkit-transform: scale(2);
            transform: scale(2);
}
100% {
    -webkit-transform: scale(1.5);
            transform: scale(1.5);
}
}

